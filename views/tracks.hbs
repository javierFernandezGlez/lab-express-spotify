<h1 style="text-align:center;">Tracks</h1>
<div id="titles">
    <h2>Track</h2>
    <h2>Preview</h2>
</div>
{{#each tracks}}
    <div id="song">
        <h3>   {{this.name}}</h3>

        {{#if this.preview_url}}
            <audio controls src="{{this.preview_url}}" type="audio/mp3"></audio>
        {{/if}}
    </div>
    <hr>
{{/each}}